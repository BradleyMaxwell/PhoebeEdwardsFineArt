<section id="contact-page">
    <div class="center-div">
        <h1>CONTACT ME</h1>
    </div>

    <form action="" id="contactform-container" class="content-div">
        <div id="contactform">
            <div id="contactform-info">
                <div class="contactform-info-element">
                    <label for="firstname">First Name</label>
                    <input type="text" name="firstname">
                </div>
    
                <div class="contactform-info-element">
                    <label for="surname">Surname</label>
                    <input type="text" name="surname">
                </div>
    
                <div class="contactform-info-element">
                    <label for="email">Email</label>
                    <input type="email" name="Email">
                </div>
    
                <div class="contactform-info-element">
                    <label for="subject">Subject</label>
                    <select name="subject">
                        <option value="">Commission Work</option>
                        <option value="">General Enquiries</option>
                        <option value="">Question</option>
                    </select>
                </div>
            </div>

            <div id="contactform-textbox">
                <textarea name="" id="" cols="30" rows="10" placeholder="Write Your Message Here..."></textarea>
            </div>
        </div>

        <button class="pink-button">SUBMIT</button>
    </form>
</section>